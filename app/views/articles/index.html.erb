<div class="jumbotron my-3 p-3 p-md-5 text-white rounded bg-dark">
  <h1 class="display-4"><%= @articles[0].title %></h1>
  <p class="lead"><%= @articles[0].short_body %></p>
  <p class="lead">
    <a class="btn btn-primary btn-lg"
       href="<%= news_path(slug: @articles[0].url) %>"
       role="button"
    >Learn more</a>
  </p>
</div>

<div class="row">
  <div class="col-12">
    <% @articles.drop(1).each_with_index do |article, i|
      article_url = !article.url.empty? ? news_path(slug: article.url) : article_path(article)
    %>

      <% unless i.odd? %>
        <div class="row">
      <% end %>
      <div class="col-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-0">
              <a class="text-dark" href="<%= article_url %>">
                <%= article.title %>
              </a>
            </h3>
            <div class="mb-1 text-muted"><%= article.publish_date %></div>
            <p class="card-text mb-auto"><%= article.short_body %></p>

            <a href="<%= article_url %>">
              Continue reading
            </a>
          </div>
          <% if article.preview_picture %>
            <img class="card-img-right flex-auto d-none d-md-block"
                 alt="<%= article.title %>" style="width: 200px;"
                 src="<%= '/storage/' + article.preview_picture %>" data-holder-rendered="true">
          <% end %>
        </div>
      </div>
      <% if i.odd? %>
        </div><!-- row -->
      <% end %>
    <% end %>
  </div>
</div>