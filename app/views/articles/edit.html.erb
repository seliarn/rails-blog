<h3>Edit Article</h3>
<div class="row">
  <div class="mx-5 col-12">
    <%= form_with scope: :article, url: article_path(@article), method: :patch do |form| %>
      <%= render "form", form: form, article: @article %>

      <div>
        <%= form.submit class: 'btn btn-success' %>
        <a class="btn btn-secondary" href="<%= news_path(slug: @article.url) %>">Cancel</a>
      </div>

    <% end %>
  </div>
</div>